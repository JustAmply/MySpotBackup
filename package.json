{
  "name": "myspotbackup",
  "version": "1.0.0",
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "prettier": "^3.7.4"
  },
  "scripts": {
    "dev": "node index.js",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint --fix .",
